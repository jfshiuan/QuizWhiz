<!doctype html>

<html>
</head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"> 
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="css/bootstrap.min.css" rel="stylesheet">
<link href="css/bootstrap-theme.min.css" rel="stylesheet">
<link href="css/introHCI.css" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="css/style4.css" />
<script src="js/modernizr.custom.63321.js"></script>
<body>
  <div class="container">
    <!-- h1 through h6 are headers. The higher the number, the smaller the header -->
    <!-- p means paragraph -->
    <div class="jumbotron">
      <h1>Welcome {{loginStatus.name}}!</h1>
      <h2>Instructor</h2>
      <h3>Logged in as {{loginStatus.username}}</h3>
      <img src={{loginStatus.image}} alt="profilePic" id="proPic">

      <a href="/logout"><button id="testjs" class="btn btn-primary btn-lg">Logout</button></a>
    </div>

    

    <!--  this is topic section -->
    <div class="TopicHeader">
      <h4>Class/Subject</h4>
    </div>



    <div class="container">                                          
      <div class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" id="menu1" data-toggle="dropdown">Choose course:
          <span class="caret"></span></button>
          <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
            {{#each loginStatus.courses}}
            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">{{courseID}}: {{courseName}}</a></li>
            {{/each}}
          </ul>
        </div>
      </div>


  <div class="container"> 
    <!-- Codrops top bar -->

    <section class="main clearfix">

      <div class="fleft">
        <select id="cd-dropdown" class="cd-select">

          <option value="-1" selected>Choose course:</option>
          {{#each loginStatus.courses}}
          <option value="1">{{courseID}}: {{courseName}}</option>
          {{/each}}
        </select>
      </div>
    </section>
  </div><!-- /container -->



    </div>

    <form id="projectForm" role="form">
    <!--<div class="form-group">
      <label for="project">Friend's name(last, first)</label>
      <select class="form-control" id="project">
        <option value="#project1"></option>
 
      </select>
    </div>
    <![endif]-->  
    <div class="mainButton">
      <a href="/createQuiz"><button id="Create Quiz" type="button" class="btn btn-default">Create Quiz</button></a>
      <hr>
      <a href="/classStats"><button id="Class Stats" type="button" class="btn btn-default">Class Stats</button></a>
      <hr>
      <a href="/studentStats"><button id="Student Stats" type="button" class="btn btn-default">Student Stats</button></a>

    </div>

    <div class="help">
      <a href="/help"><button id="helpBtn" type="button" class="btn btn-default">?</button></a>
    </div>
  </form>








  <script src="https://code.jquery.com/jquery.js"></script>
  <script src="js/bootstrap.min.js"></script>
  <script src="js/introHCI.js"></script>
  <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
  <script type="text/javascript" src="js/jquery.dropdown.js"></script>
  <script type="text/javascript">

  $( function() {

    $( '#cd-dropdown' ).dropdown();

  });

  </script>
</body>
</html>
